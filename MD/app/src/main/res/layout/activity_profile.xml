<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFFFF"
    tools:context=".view.profile.ProfileActivity">

    <ScrollView
        android:id="@+id/ra8oyfe6kr2e"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFBFBFD"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rn5k4txoo6mb_rl"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginBottom="30dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rn5k4txoo6mb"
                    android:layout_width="match_parent"
                    android:layout_height="301dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_header_bg"
                    app:shapeAppearanceOverlay="@style/br40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_person_24"
                        tools:src="@tools:sample/avatars">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/txtProfileUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afif Haidar"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginBottom="15dp"
                android:text="Email"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="15dp"
                android:text="afifhaidar@gmail.com"
                android:textColor="#3A3A3A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginBottom="13dp"
                android:text="Username"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="33dp"
                android:text="afifhaidar"
                android:textColor="#3A3A3A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblRiskResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginBottom="19dp"
                android:text="Risk Result"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtResultPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="15dp"
                android:text="87.53%"
                android:textColor="#F37169"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/lblExerciseHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginBottom="18dp"
                android:text="Exercise History"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/rh0tpozv7hm9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginBottom="26dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/txtDateExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:text="Sunday, 9th June 2024"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/rs6ncqq97ce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ra8u21sy3mta"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:elevation="24dp"
                        android:orientation="vertical"
                        android:paddingVertical="4dp">

                        <RelativeLayout
                            android:id="@+id/r3vjje7ow6mn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/r2rabffp5r49"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:background="@drawable/ic_launcher_background"
                                    android:orientation="vertical">

                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/r1u00tfctz0w"
                                android:layout_width="9dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="-3dp"
                                android:layout_marginEnd="21dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/r580ne3pkaog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Exercise 1"
                            android:textColor="#3C4158"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/ry4uhpinkmqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:text="Completed"
                        android:textColor="#007AFE"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"
                android:elevation="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"
                android:elevation="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="16sp">

            </Button>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>