<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".view.profile.EditProfileActivity">

    <include
        android:id="@+id/tb_edit_profile"
        layout="@layout/risk_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFFFF"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_edit_profile">

        <LinearLayout
            android:id="@+id/rblxu7c6onpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_baseline_person_24"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="9dp"
                android:text="Email"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="afifhaidar@gmail.com"
                android:paddingHorizontal="22dp"
                android:paddingVertical="18dp"
                android:textColor="#3A3A3A"
                android:textColorHint="@color/grey" />


            <TextView
                android:id="@+id/lbl_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="13dp"
                android:text="Username"
                android:textColor="#3A3A3A"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="afifhaidar"
                android:paddingHorizontal="22dp"
                android:paddingVertical="18dp"
                android:textColor="#3A3A3A"
                android:textColorHint="@color/grey" />


            <Button
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="82dp"
                android:background="@drawable/rounded_button"
                android:elevation="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="22dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:backgroundTint="@null">

            </Button>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>